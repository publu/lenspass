{
  "compilerOptions": {
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "lib": ["ES2015", "DOM"],
    "esModuleInterop": true,
    // To allow for mocha and jest to work together:
    // https://stackoverflow.com/a/65568463
    "strict": false, // Disable strict type-checking options
    "noImplicitAny": false, // Allow expressions and declarations with an implied 'any' type
    "noImplicitThis": false, // Allow 'this' expressions with an implied 'any' type
    "alwaysStrict": false, // Parse in strict mode and emit "use strict" for each source file
    "skipLibCheck": true, // Skip type checking of all declaration files (*.d.ts)
    "noEmitOnError": false
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "src/worker"]
}
