{
  "compilerOptions": {
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "lib": ["ES2015", "DOM"],
    "esModuleInterop": true,
    // To allow for mocha and jest to work together:
    // https://stackoverflow.com/a/65568463
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "src/worker"]
}
